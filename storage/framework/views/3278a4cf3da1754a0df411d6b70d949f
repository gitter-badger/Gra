	<script type="text/javascript">

		(function() {

			var app = angular.module('game');

			app.controller('player', function($scope) {

				<?php if(isset($player)): ?>
				$scope.player = {

					level: <?php echo e($player->level); ?>,
					plantatorLevel: <?php echo e($player->plantatorLevel); ?>,
					smugglerLevel: <?php echo e($player->smugglerLevel); ?>,
					dealerLevel: <?php echo e($player->dealerLevel); ?>,
					strength: <?php echo e($player->strength); ?>,
					perception: <?php echo e($player->perception); ?>,
					endurance: <?php echo e($player->endurance); ?>,
					charisma: <?php echo e($player->charisma); ?>,
					intelligence: <?php echo e($player->intelligence); ?>,
					agility: <?php echo e($player->agility); ?>,
					luck: <?php echo e($player->luck); ?>,
					money: <?php echo e($player->money); ?>,
					premiumPoints: <?php echo e($player->premiumPoints); ?>,
					reports: <?php echo e($player->reportsCount); ?>,
					messages: <?php echo e($player->messagesCount); ?>,
					respect: <?php echo e($player->respect); ?>,
					weight: <?php echo e($player->weight); ?>,
					capacity: <?php echo e($player->capacity); ?>,
					experienceModifier: <?php echo e($player->experienceModifier); ?>,
					moneyModifier: <?php echo e($player->moneyModifier); ?>,
				};
				<?php else: ?>
				$scope.player = null;

				<?php endif; ?>


				$scope.round = function(value, precision) {

					var n, v, r;

					if(precision === null || typeof precision == 'undefined')
						precision = 0;

					n = Math.pow(10, precision);
					v = value * n;
					r = Math.round(v)
					v = r / n;

					return v;
				};
			});

		})();

	</script>


